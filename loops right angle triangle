#include <stdio.h>
int main()
{
    int i=0;
    int j=0;
    for(i=1;i<=5;i++)
    {
        // nested loop
        for(j=1;j<=i;j++)
        {
           printf("01 \t");
        }
        printf("\n");
    }
    
}

OR

#include <stdio.h>
int main()
{
    int i,j;
    
    for(i=1;i<=5;i++)
    {
        // nested loop
        for(j=1;j<=i;j++)
        {
            //CONNDITION STATEMENT
          if(j<=i)
          printf("01\t");
          
          else
          printf(" ");
        }
        printf("\n");
    }
    
}
